{
    "experiment": {
        "name": "CIFAR 10",
        "tags": ["vgg16", "cifar-10"]
    },
    "model": {
        "description": "Transfer Learning using VGG16 for CIFAR-10 dataset",
        "name": "keras",
        "parameters": {
            "sequential": [
                {"type": "application", "application": "vgg16", "include_top": true, "classes": 10, "weights": null, "input_shape": [32, 32, 3]}
            ],
            "compilation": {
                "optimizer": {
                    "type": "sgd",
                    "lr": 0.01
                },
                "loss": "categorical_crossentropy",
                "metrics": ["acc"]
            }
        }
    },
    "dataset": {
        "name": "cifar10",
       "samples": {
            "train": 0.8,
            "test": 0.2
        }
    },
    "training": {
        "batch_size": 32,
        "epochs": 10,
        "callbacks": [
            {
                "type": "early_stopping"
            }
        ],
        "validation_split": 0.25
    },
    "tracking": {
        "trackers": [
            {
                "type": "tensorboard"
            },
            {
                "type": "mlflow"
            }
        ]
    }
}
