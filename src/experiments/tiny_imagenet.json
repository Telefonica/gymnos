{
    "experiment": {
        "name": "Tiny Imagenet",
        "tags": ["cnn", "transfer_learning"]
    },
    "model": {
        "description": "CNN for Tiny Imagenet dataset",
        "input_shape": [48, 48, 3],
        "network": [
            {"type": "conv2d", "filters": 16, "kernel_size": [2, 2], "strides": 2, "padding": "valid", "activation": "relu"},
            {"type": "maxpooling2d", "pool_size": 2},
            {"type": "conv2d", "filters": 32, "kernel_size": 4, "strides": 2, "padding": "valid", "activation": "relu"},
            {"type": "maxpooling2d", "pool_size": 2},
            {"type": "flatten"},
            {"type": "dense", "units": 512, "activation": "relu"},
            {"type": "dense", "units": 200, "activation": "softmax"}
        ],
        "compilation": {
            "optimizer": "adam",
            "loss": "categorical_crossentropy",
            "metrics": ["acc"]
        }
    },
    "dataset": {
        "name": "tiny_imagenet",
        "preprocessors": [
            {
                "type": "divide",
                "factor": 255.0
            },
            {
                "type": "image_resize",
                "width": 48,
                "height": 48
            }
        ]
    },
    "training": {
        "samples": {
            "fit": 0.3,
            "test": 0.1
        },
        "batch_size": 32,
        "epochs": 50
    },
    "tracking": {
        "trackers": [
            {
                "type": "tensorboard"
            },
            {
                "type": "mlflow"
            }
        ]
    }
}
