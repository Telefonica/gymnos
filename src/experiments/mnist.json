{
    "experiment": {
        "name": "MNIST",
        "tags": ["deep-learning", "conv"]
    },
    "model": {
        "description": "Simple NN to solve MNIST dataset",
        "compilation": {
            "optimizer": "adam",
            "loss": "categorical_crossentropy",
            "metrics": ["acc"]
        },
        "input_shape": [28, 28, 3],
        "network": [
            {"type": "flatten"},
            {"type": "dense", "units": 1024, "activation": "relu"},
            {"type": "dense", "units": 512, "activation": "relu"},
            {"type": "dense", "units": 64, "activation": "relu"},
            {"type": "dense", "units": 10, "activation": "softmax"}
        ]
    },
    "dataset": {
        "name": "mnist",
        "preprocessors": [
            {
                "type": "grayscale_to_color"
            },
            {
                "type": "divide",
                "factor": 255
            }
        ]
    },
    "session": {
        "device": "cpu"
    },
    "training": {
        "samples": {
            "fit": 0.6,
            "val": 0.2,
            "test": 0.2
        },
        "callbacks": [
            {
                "type": "early_stopping"
            }
        ],
        "batch_size": 32,
        "epochs": 10
    },
    "tracking": {
        "log_model_params": true,
        "log_model_metrics": true,
        "params": {
            "GPU": "GTX 1080-TI"
        },
        "trackers": [
            {
                "type": "tensorboard"
            },
            {
                "type": "mlflow"
            }
        ]
    }
}
